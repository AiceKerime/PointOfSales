<%- include('../partials/header.ejs') %>
    <%- include('../partials/sidebar.ejs') %>
        <section class="home-section">
            <%- include('../partials/navbar.ejs') %>

                <div class="mx-6 mt-min-2">
                    <div class="text">
                        <h1>Users</h1>

                        <h1 class="text-sm opacity-50">This is data of Users</h1>
                    </div>

                </div>

                <div class="overflow-x-auto relative mx-10 mt-2 space-y-6 bg-white rounded-lg drop-shadow-md">
                    <div class="bg-slate-400/10 px-6 py-4 border-b-2 border-black/10">
                        <a href="/users/add"
                            class="flex transition bg-blue-500 hover:bg-blue-600 w-24 text-white pr-3 rounded-md items-center font-semibold space-x-2">
                            <div class="bg-blue-600 py-2 px-3 rounded-l-md">
                                <i class="fa-solid fa-plus"></i>
                            </div>
                            <p>Add</p>
                        </a>
                    </div>

                    <div class="overflow-x-auto relative px-4 pt-2 pb-6 rounded-md">
                        <div class="px-4 -py-2">
                            <table id="users-table" class="w-full table-users">
                                <thead class="bg-transparent shadow-md">
                                    <tr class="text-left text-black">
                                        <th>User ID</th>
                                        <th>Email</th>
                                        <th>Name</th>
                                        <th>Role</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((item, index)=> { %>
                                        <tr id="loop">
                                            <td>
                                                <%= item.userid %>
                                            </td>
                                            <td>
                                                <%= item.email %>
                                            </td>
                                            <td>
                                                <%= item.name %>
                                            </td>
                                            <td>
                                                <%= item.role %>
                                            </td>
                                            <td class="text-white flex space-x-2">
                                                <a href="/users/edit/<%= item.userid %>"
                                                    class="transition bg-green-600 px-2 py-1 rounded-full hover:bg-green-500"><i
                                                        class="fa-solid fa-circle-info"></i></a>

                                                <button
                                                    class="transition block modal-open text-white bg-red-600 hover:bg-red-700 font-medium rounded-full text-sm px-2.5 py-1 text-center items-center"
                                                    type="button"
                                                    onclick="toggleModal('modal-delete<%= item.userid %>')">
                                                    <i class="fa-solid fa-trash"></i>
                                                </button>

                                                <!-- MODAL -->
                                                <div class="hidden overflow-x-hidden overflow-y-auto fixed inset-0 z-50 outline-none focus:outline-none justify-center items-center"
                                                    id="modal-delete<%= item.userid %>">
                                                    <div class="relative w-auto my-6 mx-auto max-w-3xl">
                                                        <!--content-->
                                                        <div
                                                            class="border-0 rounded-lg shadow-lg relative flex flex-col w-full bg-white outline-none focus:outline-none">
                                                            <!--header-->
                                                            <div
                                                                class="flex items-start justify-between p-5 border-b border-solid border-slate-200 rounded-t">
                                                                <h3 class="text-3xl font-semibold text-black">
                                                                    Delete Confirmation
                                                                </h3>
                                                                <button
                                                                    class="p-1 ml-auto bg-transparent border-0 text-black opacity-5 float-right text-3xl leading-none font-semibold outline-none focus:outline-none"
                                                                    onclick="toggleModal('modal-delete<%= item.userid %>')">
                                                                    <span
                                                                        class="bg-transparent text-black opacity-5 h-6 w-6 text-2xl block outline-none focus:outline-none">
                                                                        Ã—
                                                                    </span>
                                                                </button>
                                                            </div>
                                                            <!--body-->
                                                            <div class="relative p-6 flex-auto">
                                                                <p class="my-4 text-slate-500 text-lg leading-relaxed">
                                                                    Are you sure, you want to delete it?
                                                                </p>
                                                            </div>
                                                            <!--footer-->
                                                            <div
                                                                class="flex items-center justify-end p-6 border-t border-solid border-slate-200 rounded-b">
                                                                <button
                                                                    class="text-red-500 background-transparent font-bold uppercase px-6 py-2 text-sm outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"
                                                                    type="button"
                                                                    onclick="toggleModal('modal-delete<%= item.userid %>')">
                                                                    No
                                                                </button>
                                                                <a href="/users/delete/<%= item.userid %>"
                                                                    class="bg-emerald-500 text-white active:bg-emerald-600 font-semibold uppercase text-sm px-6 py-3 rounded shadow hover:shadow-lg outline-none focus:outline-none mr-1 mb-1 ease-linear transition-all duration-150"
                                                                    onclick="toggleModal('modal-delete')">
                                                                    Yes
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="hidden opacity-25 fixed inset-0 z-40 bg-black"
                                                    id="modal-delete-backdrop"></div>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                                <tfoot>
                                    <tr class="text-left hover:bg-white text-black">
                                        <td>User ID</td>
                                        <td>Email</td>
                                        <td>Name</td>
                                        <td>Role</td>
                                        <td>Action</td>
                                    </tr>
                                </tfoot>
                            </table>
