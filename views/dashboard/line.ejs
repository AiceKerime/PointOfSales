<script>
    $(document).ready((event) => {
        earningsData()
    });

    const earningsData = () => {
        $.ajax({
            data: { startdate: $('#startdate').val(), enddate: $('#enddate').val() },
            url: 'dashboard/earnoverview'
        }).done((res) => {
            const { getMonth, income } = res

            const line = $('#earning');
            new Chart(line, {
                type: 'line',
                data: {
                    label: true,
                    labels: getMonth,
                    datasets: [{
                        data: income,
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    },
                    animations: {
                        tension: {
                            duration: 2000,
                            easing: 'linear',
                            from: 0.3,
                            to: 0,
                            loop: true
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        },
                        x: {
                            grid: {
                                display: false
                            }
                        }
                    }
                }
            });
        })
    }

</script>